<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Rebels Clubhouse{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
          <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato&family=Raleway&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('menu') }}
            {{ encore_entry_script_tags('picture_preview') }}
            <script src="https://kit.fontawesome.com/dd6e6a21ba.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            {% if app.user %}
                <div id="hamburger-icon" class="menu-icon">
                    <i class="fa-solid fa-bars icon icon-hamburger"></i>
                </div>
            {% endif %}
                <div class="menu-logo">
                    <a href="{{ path('app_home') }}"
                    ><img class="logo" src="{{ asset('images/logo_R.png') }}" alt="Liege Rebels Logo"
                    /></a>
                </div>
            {% if app.user %}
                <div class="profile-icon-mobile">
                    <a href="{{ path('app_profile') }}"
                    ><i class="fa-regular fa-user icon icon-profile"></i></a>
                </div>
                <div class="profile-icon-desktop">
                    <a href="{{ path('app_profile') }}"
                    ><i class="fa-regular fa-user icon icon-profile"></i></a>
                    <div class="profile-user-data">
                    <a href="{{ path('app_profile') }}"><p class="user-name">{{ app.user.firstname ~ ' ' ~ app.user.lastname }}</p></a>
                    <a class="disconnect-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    <!-- Routing to deconnection -->
                </div>
            {% endif %}
        </header>
            {% if app.user %}
                <nav class="menu" class="menu-closed">
                    <button id="close-icon" class="icon close-icon">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                    <ul>
                        <li class="menu-item">
                            <i class="fa-regular fa-calendar-days"></i> Mon agenda
                        </li>
                        <li class="menu-item">
                        <a href="{{ path('app_licenses') }}"
                            ><i class="fa-regular fa-id-card"></i> Mes Licences</a
                        >
                        </li>
                        <li class="menu-item">
                            <i class="fa-regular fa-chart-bar"></i> Statistiques
                        </li>
                        <li class="menu-item">
                            <a href="{{ path('app_profile') }}"><i class="fa-regular fa-user"></i> Mon profil</a
                            >
                        </li>
                    </ul>
                </nav>
            {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
