<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Rebels Clubhouse{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.svg') }}" />
          <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lato&family=Raleway&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('spinner') }}
            {{ encore_entry_script_tags('menu') }}
            {{ encore_entry_script_tags('picture_preview') }}
            <script src="https://kit.fontawesome.com/dd6e6a21ba.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <div id="spinner" class="spinner"></div>
        <header>
            {% if app.user %}
                <div id="hamburger-icon" class="menu-icon">
                    <i class="fa-solid fa-bars icon icon-hamburger"></i>
                </div>
            {% endif %}
                <div class="menu-logo">
                    <a href="{{ path('app_home') }}"
                    ><img class="logo" src="{{ asset('images/logo_R.png') }}" alt="Liege Rebels Logo"
                    /></a>
                </div>
            {% if app.user %}
                <div class="profile-icon-mobile">
                    <a href="{{ path('app_profile', { 'userId' : app.user.id }) }}"
                    ><i class="fa-regular fa-user icon icon-profile"></i></a>
                </div>
                <div class="profile-icon-desktop">
                    <a href="{{ path('app_profile', { 'userId' : app.user.id }) }}"
                    ><i class="fa-regular fa-user icon icon-profile"></i></a>
                    <div class="profile-user-data">
                        <a href="{{ path('app_profile', { 'userId' : app.user.id }) }}"><p class="user-name">{{ app.user.firstname ~ ' ' ~ app.user.lastname }}</p></a>
                        <a class="disconnect-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                        <!-- Routing to deconnection -->
                    </div>
                </div>
            {% endif %}
        </header>
            {% if app.user %}
                <nav class="menu menu-closed">
                    <button id="close-icon" class="icon close-icon">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                    <ul>
                        <li class="menu-item">
                            <a href="{{ path('app_agenda') }}">
                                <i class="fa-regular fa-calendar-days"></i> Mon agenda
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="{{ path('app_licenses') }}">
                                <i class="fa-regular fa-id-card"></i> Mes Licences
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="menu-item sub-menu-item">
                                <a href="{{ path('admin_license_to_validate') }}"><i class="fa-regular fa-exclamation-triangle"></i> À valider</a>
                            </li>
                        {% endif %}
                        <li class="menu-item">
                            <i class="fa-regular fa-chart-bar"></i> Statistiques
                        </li>
                        <li class="menu-item">
                            <a href="{{ path('app_profile', { 'userId' : app.user.id }) }}"><i class="fa-regular fa-user"></i> Mon profil</a>
                        </li>
                        <li class="menu-item">
                            <a href="{{ path('app_teams') }}"><i class="fa-solid fa-user-group"></i> Mes équipes</a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        {% block body %}
            {# Display flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        <p>{{ message|raw }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
    </body>
</html>
