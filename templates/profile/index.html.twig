{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mon profil{% endblock %}

{% block body %}
<div class="container profile-container">
  <div class="heading-container">
    <h1>{{ pageTitle }}</h1>
    {% if app.user == user %}
    <a href=" {{ path('app_edit_profile') }}">
      <i class="fa-regular fa-pen-to-square icon icon-edit"></i>
    </a>
    {% endif %}
  </div>
  <div class="profile-important-info">
    <div class="profile-picture">
      <div class="profile-picture-container">
        <img
          class="profile-member-picture"
          src="{{ asset('uploads/user_pictures/' ~ user.profilePicture) }}"
          alt="Profile picture of {{ user.firstname }}"
        />
        <!-- <img class="profile-flag" src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/92/Flag_of_Belgium_%28civil%29.svg/800px-Flag_of_Belgium_%28civil%29.svg.png" alt="Belgium flag" /> -->
      </div>
    </div>
    <section class="profile-member-info">
      <div class="profile-member-name">
        <p class="profile-member-lastname">{{ user.lastname }}</p>
        <p class="profile-member-firstname">{{ user.firstname }}</p>
      </div>
      <div class="birthdate">
        <p>{{ user.dateOfBirth|date("d/m/Y") }}</p>
      </div>
      <div class="profile-member-numbers">
        <p>{{ user.licenseNumber }}</p>
      </div>
    </section>
  </div>
  <div class="flex-container">
    <section class="profile-member-contact">
      <h2>Données de contact</h2>
      <p>Mail: {{ user.email }}</p>
      <p>Telephone fixe: {{ user.phoneNumber }}</p>
      <p>Mobile: {{ user.mobileNumber }}</p>
    </section>
    <section class="profile-member-address">
      <h2>Adresse</h2>
      <p>{{ user.addressStreet }} {{ user.addressNumber }}</p>
      <p>{{ user.zipCode }} {{ user.locality }}</p>
      <p>{{ user.country }}</p>
    </section>
    <section class="profile-member-agreements">
      <h2>Accords</h2>
      <p>
          Newsletter LFBBS:
          {% if user.newsletterLFBBS %}
              <i class="fas fa-check agree"></i>
          {% else %}
              <i class="fas fa-times disagree"></i>
          {% endif %}
      </p>

      <p>
          ROI:
          {% if user.internalRules %}
              <i class="fas fa-check agree"></i>
          {% else %}
              <i class="fas fa-times disagree"></i>
          {% endif %}
      </p>
      <p>
        Politique de confidentialité:
      </p>
    </section>
  </div>
</div>
{% endblock %}
