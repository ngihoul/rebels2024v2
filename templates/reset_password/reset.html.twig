{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} | {{ "password.reset.title"|trans }}{% endblock %}

{% block body %}
    <div class="container container-reset-password">
        <div class="heading-container">
            <h1>{{ "password.reset.title"|trans }}</h1>
        </div>

        {{ form_start(resetForm, { 'attr': { 'class': 'reset-form' } }) }}
            {{ form_row(resetForm.plainPassword, { 'row_attr' : { 'class' : 'email' } }) }}
            <button class="btn btn-primary submit">{{ "password.reset.title"|trans }}</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
