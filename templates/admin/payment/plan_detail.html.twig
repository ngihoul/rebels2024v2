{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} | {{ 'payment.plan_detail.title'|trans }} {% endblock %}

{% block body %}
    <div class="container container-payment-plan">
        <div class="heading-container">
            <h1>{{ 'payment.plan_detail.title'|trans }}</h1>
        </div>

        {{ parent() }}
        <div class="license-container">
        <h2>{{ 'payment.plan_detail.license_of'|trans }} {{ paymentPlan.license.user.firstname }} {{  paymentPlan.license.user.lastname }}</h2>
            {{ include('/license/partial/_card.html.twig', { 'license' : paymentPlan.license, 'isAdmin' : true }) }}
        </div>

        <h2>{{ 'payment.plan_detail.proposed_plan'|trans }}</h2>
        <p>{{ paymentPlan.userComment }}

        <div class="actions">
            <a class="btn" href="{{ path('admin_payment_plan_validate', { planId : paymentPlan.id }) }}">{{ 'payment.plan_detail.accepted'|trans }}</a>
            <a class="btn btn-danger" href="{{ path('admin_payment_plan_refuse', { planId : paymentPlan.id }) }}">{{ 'payment.plan_detail.refused'|trans }}</a>
        </div>
    </div>
{% endblock %}