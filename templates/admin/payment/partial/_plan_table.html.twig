<table class="payment-plan-table">
    <tr>
        <th>{{ 'payment.table.player'|trans }}</th>
        <th>{{ 'payment.table.year'|trans }}</th>
        <th>{{ 'payment.table.price'|trans }}</th>
        <th>{{ 'payment.table.actions'|trans }}</th>
    </tr>
    {% for plan in paymentPlans %}
        <tr>
            <td>{{ plan.license.user.firstname }} {{ plan.license.user.lastname }}</td>
            <td>{{ plan.license.season }}</td>
            <td>{{ plan.license.price|format_currency('EUR') }}</td>
            <td>
                <a href="{{ path('admin_payment_plan_request', { planId : plan.id }) }}">
                    <i class="fa-solid fa-circle-info"></i>
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
