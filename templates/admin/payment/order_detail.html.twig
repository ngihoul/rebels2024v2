{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} | Validation du plan de paiement {% endblock %}

{% block body %}
    <div class="container container-payment-plan">
        <h1>Validation du plan de paiement</h1>

        {{ parent() }}
        <div class="license-container">
        <h2>Licence de {{ paymentPlan.license.user.firstname }} {{  paymentPlan.license.user.lastname }}</h2>
            {{ include('/license/partial/_card.html.twig', { 'license' : paymentPlan.license, 'isAdmin' : true }) }}
        </div>

        <h2>Ordre de paiement</h2>
        <div class="payment-order-container">
            <p>Montant : {{ order.amount }}</p>
            <p>Ech√©ance : {{ order.dueDate|date('d/m/Y') }}</p>
        </div>
        
        <h2>Acceptation de l'ordre de paiement</h2>
        {{ form_start(form) }}
            {{ form_row(form.value_date) }}
            {{ form_row(form.comment) }}
            <button class="btn btn-cta" type="submit">Valider</button>
        {{ form_end(form) }}

        <div class="actions">
        </div>
    </div>
{% endblock %}