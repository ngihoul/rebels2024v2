<div id="confirmation-modal" class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h2 id="modal-title">{{ "modal.title"|trans }}</h2>
        <p id="modal-text">{{ message }}</p>
        <div class="button-container">
            <button id="confirm-button" class="btn btn-danger">{{ confirmButtonText|default('modal.btn.delete'|trans) }}</button>
            <button id="cancel-button" class="btn">{{ "modal.btn.cancel"|trans }}</button>
        </div>
    </div>
</div>