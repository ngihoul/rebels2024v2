{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container container-login">
    
    <img class="login-logo" src="{{ asset('images/logo.png') }}" alt="Symfony!"/>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for flash in app.flashes('success') %}
        <div class="alert alert-success">{{ flash }}</div>
    {% endfor %}

    <form class="login-form" action="{{ path('app_login') }}" method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">

        <label for="password">Mot de passe</label>
        <input class="login-password" type="password" id="password" name="_password">

        <p class="forgot-password"><a href="{{ path("app_forgot_password_request") }}">Mot de passe oubli√© ?</a> </p>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button class="btn login" type="submit">Se connecter</button>
    </form>

    <p class="new-member">Pas encore membre ? <a class="link-new-member" href="{{ path('app_register') }}">S'inscrire !</a></p>
</div>
{% endblock %}
