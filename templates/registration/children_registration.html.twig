{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} | {{ "register.title"|trans }}{% endblock %}

{% block body %}
    <div class="container container-register">
        <h1>{{ "register.title"|trans }}</h1>
        
        {{ form_start(form) }}

        <div id="children-list" data-prototype="{{ form_widget(form.children.vars.prototype)|e('html_attr') }}">
            {% for form in form.children %}
            <div class="form-user">
                <h2>{{ "register.children_data"|trans }} #{{ loop.index }}</h2>

                {{ form_errors(form) }}

                {{ form_row(form.relation_type) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.gender) }}
                {{ form_row(form.date_of_birth, {
                    'widget': 'single_text',
                    'format': 'yyyy-MM-dd',})
                }}
                {{ form_row(form.nationality) }}
                {{ form_row(form.license_number, {'required': false }) }}
                {{ form_row(form.jersey_number, {'required': false }) }}

                {{ form_row(form.profile_picture, {'label': 'user.profile_picture.label', 'id': 'profile_picture_input', 'row_attr': { 'class': 'profile-picture' }}) }}
                <p class="disclaimer-picture alert alert-warning">{{ 'profile.picture.disclaimer'|trans }}</p>

                <div id="previewPicture">
                    <img id="previewImage" src="">
                </div>
                
                {{ form_row(form.address_street) }}
                {{ form_row(form.address_number) }}
                {{ form_row(form.zipcode) }}
                {{ form_row(form.locality) }}
                {{ form_row(form.country) }}
                {{ form_row(form.phone_number, {'required': false }) }}
                {{ form_row(form.mobile_number, {'required': false }) }}
                {{ form_row(form.email) }}
            </div>
            {% endfor %}
        </div>
        
        <button type="button" class="btn btn-secondary" id="add-child">Ajouter un enfant</button>
        <button type="button" class="btn btn-danger" id="remove-child" disabled>Supprimer le dernier enfant</button>

        <button type="submit" class="btn btn-primary">Enregistrer</button>

        {{ form_end(form) }}
    </div>

    {% block javascript %}
        {{ encore_entry_script_tags('picturePreview') }}

        <script>
            let addChildButton = document.getElementById('add-child');
            let removeChildButton = document.getElementById('remove-child');
            let childrenList = document.getElementById('children-list');
            let prototype = childrenList.getAttribute('data-prototype');
            let index = {{ form.children|length }};
            let childNumber = index + 1;

            function updateRemoveButtonState() {
                if (index > 1) {
                    removeChildButton.disabled = false;
                } else {
                    removeChildButton.disabled = true;
                }
            }

            addChildButton.addEventListener('click', function () {
                let newChildForm = prototype.replace(/__name__/g, index);
                
                newChildForm = newChildForm.replace(/label_user.firstname/g, '{{ 'user.firstname'|trans }}');
                newChildForm = newChildForm.replace(/label_user.lastname/g, '{{ 'user.lastname'|trans }}');
                newChildForm = newChildForm.replace(/label_user.gender/g, '{{ 'user.gender.label'|trans }}');
                newChildForm = newChildForm.replace(/label_user.date_of_birth/g, '{{ 'user.date_of_birth'|trans }}');
                newChildForm = newChildForm.replace(/label_user.nationality/g, '{{ 'user.nationality'|trans }}');
                newChildForm = newChildForm.replace(/label_user.license_number/g, '{{ 'user.license_number'|trans }}');
                newChildForm = newChildForm.replace(/label_user.jersey_number/g, '{{ 'user.jersey_number'|trans }}');
                newChildForm = newChildForm.replace(/label_user.address_street/g, '{{ 'user.address_street'|trans }}');
                newChildForm = newChildForm.replace(/label_user.address_number/g, '{{ 'user.address_number'|trans }}');
                newChildForm = newChildForm.replace(/label_user.zipcode/g, '{{ 'user.zipcode'|trans }}');
                newChildForm = newChildForm.replace(/label_user.locality/g, '{{ 'user.locality'|trans }}');
                newChildForm = newChildForm.replace(/label_user.country/g, '{{ 'user.country'|trans }}');
                newChildForm = newChildForm.replace(/label_user.phone_number/g, '{{ 'user.phone_number'|trans }}');
                newChildForm = newChildForm.replace(/label_user.mobile_number/g, '{{ 'user.mobile_number'|trans }}');
                newChildForm = newChildForm.replace(/label_user.email/g, '{{ 'user.email'|trans }}');

                let childDiv = document.createElement('div');
                childDiv.classList.add('form-user');
                childDiv.innerHTML = `<h2>{{ 'register.children_data'|trans }} #${childNumber}</h2>` + newChildForm;

                childrenList.appendChild(childDiv);

                index++;
                childNumber++;

                updateRemoveButtonState();
            });

            removeChildButton.addEventListener('click', function () {
                let childForms = childrenList.getElementsByClassName('form-user');
                if (childForms.length > 0) {
                    childrenList.removeChild(childForms[childForms.length - 1]);
                    index--;
                    childNumber--;
                }

                updateRemoveButtonState();
            });

            updateRemoveButtonState();
        </script>
    {% endblock %}
{% endblock %}
